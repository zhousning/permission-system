- provide(:title, t('.title'))

.login-wrapper
  .main-login.main-center
    = form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f|
      = devise_error_messages!
      .form-group
        %label.cols-sm-2.control-label
          用户名
        .cols-sm-10
          .input-group
            %span.input-group-addon
              %i.glyphicon.glyphicon-user{"aria-hidden" => "true"}
            = f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "用户邮箱"
      .form-group
        %label.cols-sm-2.control-label
          密码
        .cols-sm-10
          .input-group
            %span.input-group-addon
              %i.glyphicon.glyphicon-lock{"aria-hidden" => "true"}
            = f.password_field :password, autocomplete: "off", :class => "form-control"
      .form-group
        %label.cols-sm-2.control-label
          密码确认
        .cols-sm-10
          .input-group
            %span.input-group-addon
              %i.glyphicon.glyphicon-lock{"aria-hidden" => "true"}
            = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control"
      .form-group
        = f.submit "创建账户", :class => "btn btn-primary btn-lg btn-block login-button"
      .login-register
        = link_to "用户登陆", new_user_session_path
