.control-wrapper.container-fluid.pdlr-zero
  .mail-box
    %aside.sm-side
      .user-head
        %a.inbox-avatar{:href => "javascript:;"}
          %img{:hieght => "60", :src => "http://bootsnipp.com/img/avatars/ebeb306fd7ec11ab68cbcaa34282158bd80361a7.jpg", :width => "64"}/
        .user-name
          %h5
            %a{:href => "#"} Alireza Zare
          %span
      %ul.inbox-nav
        %li.js-users-control
          = link_to control_users_path, :class => "btn" do
            %i.fa.fa-inbox
            个人中心
        - if can? :index, Shop 
          %li.js-shops
            = link_to shops_path, :class => "btn" do
              %i.fa.fa-inbox
              机构管理
        - if can? :index, Product 
          %li.js-products
            = link_to products_path, :class => "btn" do
              %i.fa.fa-envelope-o
              服务管理
        - if can? :index, Role 
          %li.js-roles
            = link_to roles_path, :class => "btn" do
              %i.fa.fa-bookmark-o
              角色管理
        - if can? :index, User
          %li.js-users
            = link_to users_path, :class => "btn" do
              %i.fa.fa-bookmark-o
              用户管理
    %aside.lg-side
      .inbox-head
        %h3
          = t(controller_name + "." + action_name + '.title')
      .inbox-body
        = yield :lgside_body 

